<%= form_with model: category do |f| %>
  <% if category.errors.any? %>
    <div id="error-explanation">
      <h3><%= pluralize(category.errors.count, 'error') %> detected:</h3>
      <ul>
        <% category.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <% if parent_categories.any? %>
    <div>
      <%= f.label :parent_id, 'Parent category' %>
      <%= f.select :parent_id, parent_categories, include_blank: true %>
    </div>
  <% end %>

  <div>
    <%= f.submit submit_text %>
  </div>
<% end %>
