<div class='list-item'>
  <%= render 'category_list_item', category: category %>
</div>
<% if category.sub_categories.any? %>
  <% category.sub_categories.each do |sub_cat| %>
    <div class='list-item list-item--indented'>
      <%= render 'category_list_item', category: sub_cat %>
    </div>
  <% end %>
<% end %>
