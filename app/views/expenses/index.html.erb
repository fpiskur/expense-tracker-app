<div class='header'>
  <h1>Expenses</h1>
  <%= link_to 'New expense', new_expense_path, class: 'btn btn--primary' %>
</div>

<% if @expenses.any? %>
  <% @expenses.each do |date, expenses| %>
    <p class='list-item__date'>
      <span class='day'><%= date.day %></span>
      <span class='day-name'><%= date.strftime('%a') %></span>
      <span class='month-year'><%= date.strftime('%m/%Y.') %></span>
    </p>
    <%= render expenses %>
  <% end %>
<% else %>
  <div>No expenses available</div>
<% end %>
